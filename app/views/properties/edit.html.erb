<h1>Edit Property Details</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@property) do |f| %>
      <%= f.label 'No of members' %>
      <%= f.text_field :member, class: 'form-control' %>

      <%= f.label 'Location' %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.label :security_deposit %>
      <%= f.text_field :security_deposit, class: 'form-control' %>
      
      <%= f.label 'Property Type' %> <br>
      <%= collection_select(:property, :property_type_id, PropertyType.all, :id, :property_type, { :prompt => false })%>     
      <br>
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>

      <%= f.submit 'Add Property', class: 'form-control btn btn-primary', id: 'lsignup' %>
    <% end%>
  </div>
</div>