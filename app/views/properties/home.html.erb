<h1>All Property</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">  
    <div class="table-responsive">
     <table  class="table">  
        <thead>
          <tr>
            <th>Location</th>
            <th>No of member</th>
            <th>Price</th>
            <th>Security Deposit</th>
          </tr>
        </thead>
        <tbody>
        <% @properties.each do |property| %>
          <% if property.user == current_user %>
            <tr>
              <td> <%= property.address.street %></td>
              <td> <%= property.member %></td>
              <td> <%= property.price %></td>
              <td> <%= property.security_deposit %></td>
              <td><%= link_to 'Show',property_path(property) %>
              </td>
              <td><%= link_to 'Edit',edit_property_path(property) %></td>
              <td><%= link_to 'Delete',property_path(property),  method: :delete,
              data: { confirm: 'Are you sure?' }%></td>
            </tr>

          <% end%>
        <% end%> 
        </tbody> 
      </table>
    </div>
  </div>
</div>